{% extends 'base.html.twig' %}

{% block title %}Agenda{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>Agenda</h1>
        <br>
        <h4>Voici les prochains événements à venir</h4>

        {% for event in events %}
        <div class="row">
            <div class="card mt-3 mb-3 col-10 offset-1">
                <img class="card-img-top" src="{{event.cover}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{event.type}}</h5>
                    <p class="card-text">{{event.description}}</p>
                    <p class="card-text"><small class="text-muted">{{event.date | date('d/m/Y')}}</small></p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
