{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
    <div class="jumbotron mt-3">
        <h1 class="display-3">Bienvenue sur SymEvents</h1>
        <p class="lead">SymEvents rassemble les plus grands événements organisés en Belgique</p>
        <hr class="my-4">
        <p>Consultez l'agenda et achetez vos places dès maintenant !</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="{{path('agenda')}}" role="button">En savoir plus</a>
        </p>
    </div>
    <div class="container">
        <h3>Les derniers événements ajoutés...</h3>
        {% for event in events %}
        <div class="row">
            <div class="card w-100 mt-3 mb-3">
                <img class="card-img-top coverimg" src="{{event.cover}}" alt="Card image cap">
                <div class="card-body">
                    <h5><strong>{{event.name}}</strong>, le {{event.date | date('d/m/Y')}} à {{event.date | date('H')}}h{{event.date | date('i')}}</h5>
                    <p>{{event.place}}</p>
                    <p class="card-text">{{event.description}}</p>
                    <p class="card-text">à partir de {{event.price}}€</p>
                    <p class="card-text"><small class="text-muted">#{{event.type.title}}</small></p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
